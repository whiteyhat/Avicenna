<script type="text/javascript">
    $(document).ready(function () {

        $('#btn-validate').click(function () {
            $('#validateresult').hide();
            lockButton();
            var data = {
                uuid: $('#uuid').val(),
                authtoken: $('#authtoken').val(),
                filehash: $('#filehash').val(),
            }
            var request = $.ajax({
                url: "/validate",
                type: 'post',
                data: data,
                headers: {
                    'x-csrf-token': $('[name=_csrf]').val()
                },
                dataType: 'json'
            })

            request.done(function (data) {
                $('#txfound').html(getOkKo(data.satellite.txFound));
                $('#txpaid').html(getOkKo(data.satellite.isPaid));
                $('#ipfshash').html(getOkKo(data.ipfs.isSha256Ok));
                $('#message').html(data.message);
                $('#validateresult').show();
                unlockButton();

            });
            request.fail(function (jqXHR, textStatus) {
                toast('error', textStatus + jqXHR);
                unlockButton();
            });
        });

        function getOkKo(isValid) {
            return isValid ? '<span class="text-success">OK</span>' : '<span class="text-danger">KO</span>';
        }

        function lockButton(){
            $('#btn-validate').attr('disabled', true);
            $('#btn-validate').html('Validate <i class="fas fa-circle-notch fa-spin"></i>');
        }

        function unlockButton(){
            $('#btn-validate').attr('disabled', false);
            $('#btn-validate').html('Validate');
        }
    });
</script>
